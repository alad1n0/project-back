model Restaurant {
  id              String   @id @default(uuid())
  name            String
  address         String
  numberOfWorkers Int
  description     String?
  rating          Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  banner            String?   
  logo              String?   
  workingHours      String?   
  deliveryPrice     Float?    
  cookingTime       Int?      
  minimumOrderPrice Float?    

   favorites       Favorite[]
  ratings         RestaurantRating[]

   @@map("restaurants")
}