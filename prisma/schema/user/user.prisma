model User {
  id         String    @id @default(uuid())
  email      String?   @unique
  phone      String?   @unique
  password   String?
  provider   String?
  providerId String?   @unique
  role       Role      @default(USER)

  createdAt  DateTime  @default(now())

  userProfile       UserProfile?
  driverProfile     DriverProfile?
  restaurantProfile RestaurantProfile?

  @@map("users")
}
